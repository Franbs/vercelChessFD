<%- include('../layouts/header-forms') %>

                            <h3 class="fw-bold mb-2 text-uppercase mt-5">Login</h3>
                            <p class="text-white-50 mb-5">Please enter your email and password!</p>

                            <% if (error) { %>
                                <p class="err-msg">Username or password is incorrect</p>
                            <% } %>

                            <form action="" method="post">
                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" for="username">Username</label>
                                    <input type="text" id="username" name="username" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline form-white mb-5">
                                    <label class="form-label" for="password">Password</label>
                                    <input type="password" id="password" name="password"
                                        class="form-control form-control-lg" />
                                </div>

                                <button class="btn btn-lg px-5" type="submit">Login</button>
                            </form>

                        </div>

                        <div>
                            <p class="mb-0">Don't have an account? <a href="/signup" class="fw-bold link">Sign Up</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
<%- include('../layouts/footer') %>